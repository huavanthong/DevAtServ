#!/bin/bash

set -e

# Schedule to uninstall DevAtServ'GUI app
sudo systemctl start remove_gui_app.service


if [ "$1" = "remove" ]; then
  /opt/devatserv/bin/stop-devatserv.sh
fi

rm -rf /opt/devatserv/

rm -rf ${HOME}/.local/share/applications/devatserv.desktop

sudo rm -rf /etc/systemd/system/remove_gui_app.service

echo -e "${MSG_DONE} DevAtServ has been successfully removed."

